<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="2dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardAar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        android:padding="15dp"
        android:paddingRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="100dp">

        <!--Linearlayout for å legge alt nedover-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--Layout for Dato delen-->
            <LinearLayout
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/labelDato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Dato"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvDato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="01.01"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:visibility="visible" />

            </LinearLayout>

            <!--Layout for Timer delen-->
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Antall timer:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>


            <!--Layout for Info delen-->
            <LinearLayout
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/labelInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="Info:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"

                    />

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text=" bla bla bla"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />


            </LinearLayout>


        </LinearLayout><!--Slutt på  Linearlayout for å legge alt nedover -->

    </android.support.v7.widget.CardView>

</LinearLayout>